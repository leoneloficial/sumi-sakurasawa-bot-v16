<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ZeroTwo - Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');
        body { font-family: 'Inter', sans-serif; background-color: #f3f4f6; }
        .glass { background: rgba(255, 255, 255, 0.95); backdrop-filter: blur(10px); }
        .terminal { font-family: 'Fira Code', monospace; }
        /* Scrollbar custom */
        ::-webkit-scrollbar { width: 8px; height: 8px; }
        ::-webkit-scrollbar-track { background: #1f2937; }
        ::-webkit-scrollbar-thumb { background: #4b5563; border-radius: 4px; }
        ::-webkit-scrollbar-thumb:hover { background: #6b7280; }
    </style>
</head>
<body class="text-gray-800 antialiased min-h-screen flex flex-col">

    <!-- Navbar -->
    <nav class="glass sticky top-0 z-50 border-b border-gray-200 shadow-sm">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <div class="flex items-center">
                    <span class="text-2xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-red-500 to-pink-500">
                        <i class="fa-solid fa-robot mr-2 text-red-500"></i>ZeroTwo Manager
                    </span>
                </div>
                <div class="flex items-center space-x-4">
                    <div class="flex items-center text-sm font-medium text-gray-600">
                        <i class="fa-regular fa-user mr-2"></i> <%= username %>
                    </div>
                    <a href="/logout" class="text-sm font-medium text-red-500 hover:text-red-700 transition-colors">
                        <i class="fa-solid fa-right-from-bracket mr-1"></i> Salir
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <main class="flex-grow max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 w-full">

        <!-- Global Stats -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
             <div class="bg-white rounded-2xl shadow-sm p-6 border border-gray-100 flex items-center">
                <div class="p-3 rounded-full bg-blue-100 text-blue-600 mr-4">
                    <i class="fa-solid fa-users text-xl"></i>
                </div>
                <div>
                    <p class="text-gray-500 text-sm">SubBots Activos (Global)</p>
                    <p class="text-2xl font-bold text-gray-800"><%= totalSubbots %></p>
                </div>
            </div>
        </div>

        <!-- Top Section: Connect New Bot -->
        <div class="bg-white rounded-2xl shadow-sm p-6 mb-8 border border-gray-100">
            <h2 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
                <i class="fa-solid fa-plus-circle text-green-500 mr-2"></i> Nuevo SubBot
            </h2>
            <div class="flex flex-col md:flex-row gap-4 items-end">
                <div class="flex-grow w-full">
                    <label for="phoneNumber" class="block text-sm font-medium text-gray-700 mb-1">Número de WhatsApp</label>
                    <div class="relative rounded-md shadow-sm">
                        <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
                            <i class="fa-solid fa-phone text-gray-400"></i>
                        </div>
                        <input type="text" name="phoneNumber" id="phoneNumber"
                            class="block w-full rounded-lg border-gray-300 pl-10 focus:border-purple-500 focus:ring-purple-500 sm:text-sm py-3 bg-gray-50 border transition-all"
                            placeholder="Ej: 521234567890 (Con código de país)">
                    </div>
                    <p class="mt-1 text-xs text-gray-500">Ingresa el número sin el símbolo '+'</p>
                </div>
                <button onclick="requestCode()" id="btn-connect"
                    class="w-full md:w-auto bg-gradient-to-r from-purple-600 to-blue-600 hover:from-purple-700 hover:to-blue-700 text-white font-medium py-3 px-6 rounded-lg shadow-md transition-transform transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500">
                    <i class="fa-solid fa-link mr-2"></i> Vincular
                </button>
            </div>

            <!-- Code Display Area -->
            <div id="code-container" class="hidden mt-6 p-6 bg-indigo-50 rounded-xl border border-indigo-100 text-center animate-fade-in">
                <h3 class="text-indigo-800 font-medium mb-2">Código de Vinculación</h3>
                <div id="code-display" class="text-4xl font-mono font-bold text-indigo-600 tracking-[0.2em] my-4 select-all cursor-pointer" title="Click para copiar" onclick="copyCode(this)">
                    ---
                </div>
                <p class="text-sm text-indigo-600">
                    Ve a <span class="font-semibold">WhatsApp > Dispositivos Vinculados > Vincular un dispositivo > Vincular con número de teléfono</span> e ingresa este código.
                </p>
                <div id="timer" class="mt-2 text-xs text-red-500 font-mono"></div>
            </div>
        </div>

        <!-- Active Bots Grid -->
        <h2 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
            <i class="fa-solid fa-server text-blue-500 mr-2"></i> Mis SubBots Activos
        </h2>

        <div id="bots-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <!-- Bots will be loaded here via JS -->
            <div class="col-span-full text-center py-12 text-gray-400">
                <i class="fa-solid fa-circle-notch fa-spin text-3xl mb-3"></i>
                <p>Cargando bots...</p>
            </div>
        </div>

    </main>

    <!-- Settings Modal -->
    <div id="settings-modal" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden flex items-center justify-center opacity-0 transition-opacity duration-300">
        <div class="bg-white rounded-xl shadow-2xl w-full max-w-lg m-4 transform scale-95 transition-transform duration-300">
            <div class="flex justify-between items-center p-6 border-b border-gray-100">
                <h3 class="text-xl font-bold text-gray-800">Personalizar SubBot</h3>
                <button onclick="closeSettings()" class="text-gray-400 hover:text-gray-600 transition-colors">
                    <i class="fa-solid fa-times text-xl"></i>
                </button>
            </div>
            <div class="p-6 space-y-6">
                <input type="hidden" id="settings-bot-id">

                <!-- Name Setting -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Nombre del Bot</label>
                    <div class="flex gap-2">
                        <input type="text" id="settings-name" class="flex-1 rounded-lg border-gray-300 focus:ring-purple-500 focus:border-purple-500" placeholder="Nuevo nombre">
                        <button onclick="saveName()" class="bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded-lg transition-colors">
                            <i class="fa-solid fa-save"></i>
                        </button>
                    </div>
                    <p class="text-xs text-gray-500 mt-1">El cambio se reflejará inmediatamente.</p>
                </div>

                <!-- Banner Setting -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Banner del Bot</label>
                    <div class="flex items-center justify-center w-full">
                        <label for="settings-banner" class="flex flex-col items-center justify-center w-full h-32 border-2 border-gray-300 border-dashed rounded-lg cursor-pointer bg-gray-50 hover:bg-gray-100">
                            <div class="flex flex-col items-center justify-center pt-5 pb-6">
                                <i class="fa-solid fa-cloud-upload-alt text-2xl text-gray-400 mb-2"></i>
                                <p class="mb-2 text-sm text-gray-500"><span class="font-semibold">Click para subir</span> o arrastra</p>
                                <p class="text-xs text-gray-500">JPG, PNG, WEBP</p>
                            </div>
                            <input id="settings-banner" type="file" class="hidden" accept="image/*" onchange="uploadBanner(this)" />
                        </label>
                    </div>
                    <p class="text-xs text-gray-500 mt-1 text-center" id="upload-status"></p>
                </div>
            </div>
        </div>
    </div>

    <script>
        // --- API Interaction ---

        async function requestCode() {
            const phoneInput = document.getElementById('phoneNumber');
            const btn = document.getElementById('btn-connect');
            const codeContainer = document.getElementById('code-container');
            const codeDisplay = document.getElementById('code-display');
            const timerDisplay = document.getElementById('timer');

            const phone = phoneInput.value.trim();
            if (!phone) return Swal.fire('Error', 'Por favor ingresa un número válido', 'error');

            btn.disabled = true;
            btn.innerHTML = '<i class="fa-solid fa-circle-notch fa-spin mr-2"></i> Generando...';

            try {
                const res = await fetch('/request-code', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ phoneNumber: phone })
                });
                const data = await res.json();

                if (data.success && data.code) {
                    codeContainer.classList.remove('hidden');
                    codeDisplay.textContent = data.code;
                    startTimer(45, timerDisplay); // Assuming ~45s validity
                    Swal.fire({
                        icon: 'success',
                        title: 'Código Generado',
                        text: 'Usa el código para vincular tu WhatsApp rápidamente.',
                        timer: 3000,
                        showConfirmButton: false
                    });
                    loadBots(); // Refresh list just in case
                } else {
                    Swal.fire('Error', data.error || 'No se pudo generar el código', 'error');
                }
            } catch (e) {
                Swal.fire('Error', 'Error de red', 'error');
            } finally {
                btn.disabled = false;
                btn.innerHTML = '<i class="fa-solid fa-link mr-2"></i> Vincular';
            }
        }

        function startTimer(duration, display) {
            let timer = duration, minutes, seconds;
            const interval = setInterval(function () {
                minutes = parseInt(timer / 60, 10);
                seconds = parseInt(timer % 60, 10);

                minutes = minutes < 10 ? "0" + minutes : minutes;
                seconds = seconds < 10 ? "0" + seconds : seconds;

                display.textContent = "Expira en: " + minutes + ":" + seconds;

                if (--timer < 0) {
                    clearInterval(interval);
                    display.textContent = "Código expirado";
                }
            }, 1000);
        }

        function copyCode(el) {
            navigator.clipboard.writeText(el.textContent.trim());
            const original = el.style.color;
            el.style.color = '#22c55e'; // Green
            setTimeout(() => el.style.color = '', 500);
            const Toast = Swal.mixin({ toast: true, position: 'top-end', showConfirmButton: false, timer: 1500 });
            Toast.fire({ icon: 'success', title: 'Copiado al portapapeles' });
        }

        async function loadBots() {
            const grid = document.getElementById('bots-grid');
            try {
                const res = await fetch('/api/my-subbots');
                const bots = await res.json();

                if (bots.length === 0) {
                    grid.innerHTML = `
                        <div class="col-span-full text-center py-12 bg-white rounded-xl border border-gray-200 border-dashed">
                            <i class="fa-solid fa-robot text-gray-300 text-5xl mb-4"></i>
                            <h3 class="text-lg font-medium text-gray-600">No tienes SubBots activos</h3>
                            <p class="text-gray-400 text-sm">Vincula un nuevo número para comenzar.</p>
                        </div>`;
                    return;
                }

                grid.innerHTML = bots.map(bot => `
                    <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden hover:shadow-md transition-shadow">
                        <div class="p-5">
                            <div class="flex justify-between items-start mb-4">
                                <div>
                                    <h3 class="font-bold text-gray-800 text-lg">${bot.name}</h3>
                                    <p class="text-sm text-gray-500 font-mono">+${bot.id}</p>
                                </div>
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                    <span class="w-2 h-2 bg-green-500 rounded-full mr-1"></span> Online
                                </span>
                            </div>
                            <div class="flex space-x-2 mt-4">
                                <button onclick="openSettings('${bot.id}', '${bot.name}')" class="flex-1 bg-blue-500 hover:bg-blue-600 text-white text-sm font-medium py-2 px-3 rounded-lg transition-colors flex justify-center items-center">
                                    <i class="fa-solid fa-cog mr-2"></i> Personalizar
                                </button>
                                <button onclick="stopBot('${bot.id}')" class="flex-1 bg-red-50 hover:bg-red-100 text-red-600 text-sm font-medium py-2 px-3 rounded-lg transition-colors flex justify-center items-center border border-red-200">
                                    <i class="fa-solid fa-power-off mr-2"></i> Detener
                                </button>
                            </div>
                        </div>
                    </div>
                `).join('');

            } catch (e) {
                console.error(e);
                grid.innerHTML = '<div class="col-span-full text-center text-red-500">Error cargando bots</div>';
            }
        }

        async function stopBot(id) {
            const result = await Swal.fire({
                title: '¿Detener SubBot?',
                text: "Se cerrará la sesión y tendrás que vincular nuevamente.",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Sí, detener',
                cancelButtonText: 'Cancelar'
            });

            if (result.isConfirmed) {
                try {
                    await fetch('/api/stop-subbot', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ id })
                    });
                    Swal.fire('Detenido', 'El bot ha sido desconectado.', 'success');
                    loadBots();
                } catch (e) {
                    Swal.fire('Error', 'No se pudo detener el bot', 'error');
                }
            }
        }

        // Settings Logic
        function openSettings(id, currentName) {
            document.getElementById('settings-bot-id').value = id;
            document.getElementById('settings-name').value = currentName;
            const modal = document.getElementById('settings-modal');
            modal.classList.remove('hidden');
            void modal.offsetWidth;
            modal.classList.remove('opacity-0');
            modal.querySelector('div').classList.remove('scale-95');
        }

        function closeSettings() {
            const modal = document.getElementById('settings-modal');
            modal.classList.add('opacity-0');
            modal.querySelector('div').classList.add('scale-95');
            setTimeout(() => modal.classList.add('hidden'), 300);
        }

        async function saveName() {
            const id = document.getElementById('settings-bot-id').value;
            const name = document.getElementById('settings-name').value;

            try {
                const res = await fetch('/api/settings/name', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ id, name })
                });
                const data = await res.json();
                if (data.success) {
                    Swal.fire('Éxito', 'Nombre actualizado', 'success');
                    loadBots();
                } else {
                    Swal.fire('Error', data.error, 'error');
                }
            } catch (e) {
                Swal.fire('Error', 'Error de conexión', 'error');
            }
        }

        async function uploadBanner(input) {
            const id = document.getElementById('settings-bot-id').value;
            const file = input.files[0];
            if (!file) return;

            const status = document.getElementById('upload-status');
            status.innerHTML = '<i class="fa-solid fa-circle-notch fa-spin"></i> Subiendo...';

            const formData = new FormData();
            formData.append('id', id);
            formData.append('file', file);

            try {
                const res = await fetch('/api/settings/banner', {
                    method: 'POST',
                    body: formData
                });
                const data = await res.json();
                if (data.success) {
                    status.innerHTML = `<span class="text-green-500"><i class="fa-solid fa-check"></i> Banner actualizado</span>`;
                    Swal.fire('Éxito', 'Banner actualizado', 'success');
                } else {
                    status.innerHTML = `<span class="text-red-500">Error: ${data.error}</span>`;
                }
            } catch (e) {
                status.innerHTML = `<span class="text-red-500">Error de conexión</span>`;
            }
        }

        // Initial Load
        loadBots();
        setInterval(loadBots, 10000); // Refresh list periodically

    </script>
</body>
</html>